<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_main_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/btn_border_fill_white"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_main_home"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/selector_main_rb_home"
                android:textSize="12dp"
                android:background="@null"/>
            <RadioButton
                android:checked="true"
                android:id="@+id/rb_main_bookrack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/selector_main_rb_bookrack"
                android:textSize="12dp"
                android:background="@null"/>
            <RadioButton
                android:id="@+id/rb_main_user"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/selector_main_rb_user"
                android:textSize="12dp"
                android:background="@null"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>