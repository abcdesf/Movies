<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--按钮边框-->
    <!--solid用以指定内部填充色-->
    <solid android:color="@color/colorPrimary" />
    <!--渐变色-->
    <gradient
        android:angle="0"
        android:startColor="@color/colorWhite"
        android:endColor="@color/colorWhite"/>
    <corners
        android:radius="25dp"/>
</shape>


